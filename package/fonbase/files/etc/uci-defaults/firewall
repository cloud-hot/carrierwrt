uci import firewall <<EOF
config defaults                           
	option syn_flood	1         
	option input	ACCEPT	
	option output	ACCEPT
	option forward	REJECT	

config zone
	option name		wannet
	option input	REJECT
	option output	REJECT
	option forward	REJECT

config zone lan
	option name		lan
	option input	ACCEPT
	option output	ACCEPT
	option forward	REJECT

config zone
	option name		wan
	option input	REJECT	
	option output	ACCEPT
	option forward	REJECT
	option masq		1

config zone
	option name		hotspotwifi
	option input	REJECT
	option output	REJECT
	option forward	REJECT

config zone
	option name		hotspot
	option input	ACCEPT
	option output	ACCEPT
	option forward	REJECT

config forwarding
	option src      lan
	option dest     wan

config forwarding
	option src      hotspot
	option dest     wan

config include
	option path /etc/firewall.fon

config include
	option path /etc/firewall.user
EOF
uci commit
